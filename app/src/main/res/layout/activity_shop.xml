<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adadad"
    android:orientation="vertical"
    tools:context=".Shop">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="210dp"
        android:layout_height="128dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aaaa"
        tools:layout_editor_absoluteX="0dp" />
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="162dp"
            android:layout_height="131dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/aaa"
            tools:layout_editor_absoluteX="214dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv3"
        android:layout_width="189dp"
        android:layout_height="140dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/iv1"
        app:srcCompat="@drawable/aaaaa"
        tools:layout_editor_absoluteX="16dp" />
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="226dp"
            android:layout_height="140dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/iv2"
            app:srcCompat="@drawable/aa"
            tools:layout_editor_absoluteX="183dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <ImageView
        android:id="@+id/iv5"
        android:layout_width="189dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv3"
        app:srcCompat="@drawable/a6" />
        <ImageView
            android:id="@+id/iv6"
            android:layout_width="171dp"
            android:layout_height="129dp"
            android:layout_marginTop="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv4"
            app:srcCompat="@drawable/a" />
    </LinearLayout>



</LinearLayout>